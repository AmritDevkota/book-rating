<%- include('../includes/head.ejs', {pageTitle: pageTitle }) %>

<%- include('../includes/head2.ejs') %>

<%- include('../includes/navigation.ejs', { user: user }) %>

<main>
    <h1><%= book.bookName %></h1>
    <hr>
    <div>
        <h3>Published Year: <%= book.publishYear %></h2>
    </div>
    <div>
        <h1>Author: <%= book.author %> </h1>
    </div>
    <div>
        <h4>Rating: <%= book.rating %> </h4>
    </div>
    <form action="/book-details/<%= book._id %>/review" method="POST">
        <h2>Review: </h2>
        <textarea name="review" id="review" cols="30" rows="10"></textarea><br>
        Your Rating: <select name="userRating" id="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <br>
        <button type="submit">Submit</button>
    </form>
    <hr>
    <% for (let review of reviews) { %> 
        <article>
            <header>
                <b><%= review.user.name %></b>
                <h1><%= review.review %></h1>
                <h2><%= review.rating %></h2>
            </header>            
        </article>
    <% } %>
</main>

<%- include('../includes/footer.ejs') %>

<%- include('../includes/end.ejs') %>